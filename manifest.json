{
  "manifest_version": 2,

  "name": "Formless",
  "description": "This extension can design forms with Rdfa support, fill from others forms, sign and verify the digital signature with the standard OpenPGP",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    	"tabs", "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches":    ["*://*/*"],
      "js": ["assets/js/angular.js"]
    }
  ],

  "web_accessible_resources": [
    "assets/schema/schemaorg.json",
    "assets/js/modal.function.js"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
}
